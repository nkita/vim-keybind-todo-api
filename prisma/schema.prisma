generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id
  email     String    @unique
  name      String?
  todo_list TodoList?
}

model TodoList {
  id         String   @id
  name       String
  created_at DateTime
  updated_at DateTime
  Todo       Todo[]
  user       User     @relation(fields: [userId], references: [id])
  userId     String   @unique
}

model Todo {
  id           String    @id
  is_complete  Boolean
  priority     String
  created_at   DateTime
  updated_at   DateTime
  completedAt  DateTime
  text         String
  detail       String
  project_id   String
  context_id   String
  list_id      String
  user_id      String
  todo_list    TodoList? @relation(fields: [todo_list_id], references: [id])
  todo_list_id String?
}
